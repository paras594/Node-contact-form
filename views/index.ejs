<h1 class="text-center border-b text-blue-700 text-2xl py-2 font-bold">
	Contact Page
</h1>

<div>
	<h1 class="text-4xl text-center mt-4">Contact Us</h1>
	<% if (messages.success) { %>
		<div class="text-center">
	  		<div class="inline-block px-4 py-2 mt-2 rounded bg-green-200 w-auto border border-gray-600"><%= messages.success %></div>
		</div>
	<% } %>
	<form id="contact-form" action="/email" method="POST" class="mx-auto mt-8">
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">
		<div class="mb-2">
			<div class="flex items-center">
				<label class="mx-2 text-xl w-24 text-right">Name :</label>
				<input type="text" value="<%= data.name || "" %>" id="name" class="flex-1 px-2 py-1 text-lg outline-none border rounded border-gray-500 focus:border-blue-500" name="name" id="name" placeholder="Name">
			</div>
			<div class="flex items-center">
				<div class="w-24 mx-2"></div>
				<p id="name-error" class="flex-1 text-sm text-red-500 p-1">
					<%= errors.name || "" %>
				</p>
			</div>
		</div>
		<div class="mb-2">
			<div class="flex items-center">
				<label class="mx-2 text-xl w-24 text-right">Subject :</label>
				<input type="text" value="<%= data.subject || "" %>" id="subject" class="flex-1 px-2 py-1 text-lg outline-none border rounded border-gray-500 focus:border-blue-500" name="subject" id="subject" placeholder="Subject">	
			</div>
			<div class="flex items-center">
				<div class="w-24 mx-2"></div>
				<p id="subject-error" class="flex-1 text-sm text-red-500 p-1">
					<%= errors.subject || "" %>
				</p>
			</div>
		</div>
		<div class="mb-2">
			<div class="flex items-center">
				<label class="mx-2 text-xl w-24 text-right">Email :</label>
				<input type="email" value="<%= data.email || "" %>" id="email" class="flex-1 px-2 py-1 text-lg outline-none border rounded border-gray-500 focus:border-blue-500" name="email" name="email" id="email" placeholder="Email">
			</div>
			<div class="flex items-center">
				<div class="w-24 mx-2"></div>
				<p id="email-error" class="flex-1 text-sm text-red-500 p-1">
					<%= errors.email || "" %>
				</p>
			</div>
		</div>
		<div class="mb-2">
			<div class="flex items-center">
				<label class="self-start mx-2 text-xl w-24 text-right">Message :</label>
				<textarea name="message" value="<%= data.message || "" %>" id="message" class="flex-1 px-2 py-1 text-lg outline-none border rounded border-gray-500 focus:border-blue-500" id="message"></textarea>
			</div>
			<div class="flex items-center">
				<div class="w-24 mx-2"></div>
				<p id="message-error" class="flex-1 text-sm text-red-500 p-1">
					<%= errors.message || "" %>
				</p>
			</div>
		</div>

		<button class="block mx-auto mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Submit</button>
	</form>

</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>